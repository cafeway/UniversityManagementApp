<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/firstName"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="#FFFFFF"
    tools:context=".register">


    <ImageView

        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/FirstName"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:lines="1"
                android:textColor="#42AE23"
                android:hint="FirstName"
                android:padding="10dp"

                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#42AE23"
                android:textColorLink="#79A61D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/WelcomeText" />

            <EditText
                android:id="@+id/SecondName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:lines="1"
                android:textColor="#42AE23"
                android:hint="SecondName"
                android:padding="10dp"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#42AE23"
                android:textColorLink="#79A61D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/FirstName" />

            <EditText
                android:lines="1"
                android:textColor="#42AE23"
                android:id="@+id/ThirdName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/name"
                android:drawablePadding="10dp"
                android:hint="ThirdName"
                android:padding="10dp"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#42AE23"
                android:textColorLink="#79A61D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/SecondName" />
            <EditText
                android:lines="1"
                android:textColor="#42AE23"
                android:id="@+id/Id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/id"
                android:drawablePadding="10dp"
                android:hint="Id Number"
                android:padding="10dp"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#42AE23"
                android:textColorLink="#79A61D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ThirdName" />
            <EditText
                android:lines="1"
                android:textColor="#42AE23"
                android:id="@+id/PhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:background="@drawable/background"
                android:drawableStart="@drawable/phone"
                android:drawablePadding="10dp"
                android:hint="Phone Number"
                android:padding="10dp"
                android:textColorHighlight="#0E0E0E"
                android:textColorHint="#42AE23"
                android:textColorLink="#79A61D"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/Id" />
            <Spinner

                android:id="@+id/schoolsSpinner"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:focusable="auto"
                android:labelFor="@id/Id"
                android:layerType="none"
                android:popupBackground="@color/green"
                android:popupTheme="@color/green"
                android:spinnerMode="dropdown"
                android:tag="Course"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/PhoneNumber"
                tools:listitem="Courses" />
            <Spinner

                android:id="@+id/coursesSpinner"
                android:layout_width="322dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/background"
                android:focusable="auto"
                android:labelFor="@id/Id"
                android:layerType="none"
                android:popupBackground="@color/green"
                android:popupTheme="@color/green"
                android:spinnerMode="dropdown"
                android:tag="Course"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/schoolsSpinner"
                tools:listitem="Courses" />


            <TextView
                android:id="@+id/WelcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:gravity="center"
                android:text="Let Us know you better"
                android:textAllCaps="true"
                android:textColor="#308730"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/register" />


